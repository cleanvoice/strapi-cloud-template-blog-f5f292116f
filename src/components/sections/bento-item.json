{
  "collectionName": "components_sections_bento_item",
  "info": {
    "displayName": "Bento Item",
    "description": "Single bento tile with media, text and link (v3 compatible)"
  },
  "options": {},
  "attributes": {
    "Title": {
      "type": "string"
    },
    "Content": {
      "type": "richtext"
    },
    "Media": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "videos"
      ]
    },
    "Icon": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "videos",
        "files"
      ]
    },
    "Link": {
      "type": "component",
      "component": "shared.link",
      "repeatable": false
    },
    "ButtonText": {
      "type": "string"
    },
    "ButtonLink": {
      "type": "string"
    },
    "Size": {
      "type": "enumeration",
      "enum": [
        "half",
        "full"
      ]
    },
    "ImagePosition": {
      "type": "enumeration",
      "enum": [
        "left",
        "right",
        "full"
      ]
    }
  }
}
